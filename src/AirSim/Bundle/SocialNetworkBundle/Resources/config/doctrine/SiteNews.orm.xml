<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AirSim\Bundle\SocialNetworkBundle\Entity\SiteNews" table="site_news">
    <id name="newsId" type="integer" column="news_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="langId" type="string" column="lang_id" length="3" nullable="false"/>
    <field name="title" type="string" column="title" length="100" nullable="false"/>
    <field name="description" type="text" column="description" nullable="false"/>
    <field name="text" type="text" column="text" nullable="false"/>
    <field name="pic" type="string" column="pic" length="100" nullable="true"/>
    <field name="dateAdded" type="date" column="date_added" nullable="false"/>
  </entity>
</doctrine-mapping>
