{% extends 'AirSimSocialNetworkBundle:Default:layoutInner.html.twig' %}

{% block pageStylesheets %}
    <link href = "{{ asset('assets/css/options.css') }}" type = "text/css" rel = "stylesheet" media = "screen" />
{% endblock pageStylesheets %}

{% block pageJavaScripts %}
    <script src ="{{ asset('assets/js/private.js') }}" type = "text/javascript"></script>
{% endblock pageJavaScripts %}

{% block uniqueContent %}
    <div class = "optionsWrapper">
        <nav class = "optionsTypes">
            <ul>
                <a href = "private"><li class = "active">Private</li></a>
                <a href = "synchronization"><li>Synchronization</li></a>
                <a href = "safety"><li>Safety</li></a>
                <a href = "personal"><li>Personal data</li></a>
            </ul><div class = "clear"></div>
        </nav>
        <div class = "optionsContent">
            <section class = "optionsConfiguration">
                <table class = "selectList">
                    <tbody>
                        <tr>
                            <td><span class = "optionsHeader">Private Settings</span><br/><br/></td>
                            <td>
                                <div class = "ajaxWaitSmall"></div>
                            </td>
                        </tr>
                        <tr><td>&nbsp;</td></tr>
                        <tr>
                            <td>Phone number is visible to:</td>
                            <td>
                                <select class = "configOptionSelect" name = "priv_phone_visibility">
                                    <option value = "0" {% if config.privPhoneVisibility == 0%}selected{% endif %}>all</option>
                                    <option value = "1" {% if config.privPhoneVisibility == 1%}selected{% endif %}>friends only</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Allow search me by phone number:</td>
                            <td>
                                <select class = "configOptionSelect" name = "priv_search_by_phone">
                                    <option value = "0" {% if config.privSearchByPhone == 0%}selected{% endif %}>yes</option>
                                    <option value = "1" {% if config.privSearchByPhone == 1%}selected{% endif %}>no</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Show additional info:</td>
                            <td>
                                <select class = "configOptionSelect" name = "priv_add_info_visibility">
                                    <option value = "0" {% if config.privAddInfoVisibility == 0%}selected{% endif %}>all</option>
                                    <option value = "1" {% if config.privAddInfoVisibility == 1%}selected{% endif %}>friends only</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>My friends are visible to:</td>
                            <td>
                                <select class = "configOptionSelect" name = "priv_friends_visibility">
                                    <option value = "0" {% if config.privFriendsVisibility == 0%}selected{% endif %}>friends only</option>
                                    <option value = "1" {% if config.privFriendsVisibility == 1%}selected{% endif %}>nobody</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Phone number is visible to:</td>
                            <td>
                                <select class = "configOptionSelect" name = "priv_who_allowed_write">
                                    <option value = "0" {% if config.privWhoAllowedWrite == 0%}selected{% endif %}>everybody</option>
                                    <option value = "1" {% if config.privWhoAllowedWrite == 1%}selected{% endif %}>friends only</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </section>
            <section class = "optionDescription">
                <article class = "generalDescription">
                    Private settings general description
                </article>
                <article class = "detailedDescription">
                    Private settings selected option detailed description
                </article>
            </section>
        </div>
    </div>
{% endblock %}